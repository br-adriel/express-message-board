<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include partials/globalHead.ejs %>
  </head>
  <body>
    <%- include partials/header.ejs %>
    <main>
      <div class="container">
        <% messages.forEach(message => { %>
        <div class="message">
          <h2><%= message.text %></h2>
          <p><%= message.user %></p>
          <small>
            <%= message.added.toLocaleDateString() %> - <%=
            message.added.toLocaleTimeString() %>
          </small>
        </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
