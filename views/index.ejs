<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include partials/globalHead.ejs %>
  </head>
  <body>
    <%- include partials/header.ejs %>
    <main>
      <div class="container">
        <% messages.forEach(message => { %>
        <div class="message-wrapper">
          <h2 class="message"><%= message.text %></h2>
          <div class="message-author">
            <p><%= message.user %></p>
            <small>
              <%= message.added.toLocaleDateString() %> - <%=
              message.added.toLocaleTimeString() %>
            </small>
          </div>
        </div>
        <% }) %>
      </div>
    </main>
    <%- include partials/footer.ejs %>
  </body>
</html>
